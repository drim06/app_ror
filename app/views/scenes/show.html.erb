<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.scenes.any? %>
      <h3>Scenes (<%= @user.scenes.count %>)</h3>
      <ol class="scenes">
        <%= render @scenes %>
      </ol>
      <%= will_paginate @scenes %>
    <% end %>
  </div>
</div>
