<% provide(:title, 'New Character') %>
<h1>New Character</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@character) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :age %>
      <%= f.text_field :age %>

      <%= f.submit "Create my character", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
